<div>
  <h1><%= @restaurant.name %> (<%= @restaurant.category %>) </h1>
  <p><%= @restaurant.address %></p>
  <p> contact us at: <%= @restaurant.phone_number %> </p>


  <%= link_to "add a review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %>
  <%= link_to "go back to all restaurants", restaurants_path, class: "btn btn-primary" %>


  <h3>Reviews</h3>
  <div class="border border-primary">
    <% @restaurant.reviews.each do |review| %>
    <p> rating: <%= review.rating %> </p>
    <h4> <%= review.content %> </h4>
    <% end %>
  </div>

</div>
